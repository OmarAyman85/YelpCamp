<% layout('layouts/boilerplate') %>

<h1><%= campground.title %></h1>
<h2><%= campground.location %></h2>
<img src="<%= campground.image %>" alt="Responsive Image" class="img-fluid">
<br>
<br>
<p><%= campground.description %></p>
<p>Price: $<%= campground.price %></p>
<hr />
<footer>
  <a href="/campgrounds/<%= campground._id %>/edit">Edit</a>
  <br />
  <br />
  <form
    action="/campgrounds/<%= campground._id  %>?_method=DELETE"
    method="POST"
  >
    <button>Delete campground</button>
  </form>
  <br />
  <a href="/campgrounds">Return to all campgrounds</a>
</footer>
