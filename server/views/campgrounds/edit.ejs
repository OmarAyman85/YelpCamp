<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Editing Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          id="title"
          name="campgrounds[title]"
          value="<%= campground.title %>"
          required
        />
        <div class="valid-feedback">Right format</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          name="campgrounds[location]"
          value="<%= campground.location %>"
          required
        />
        <div class="valid-feedback">Right format</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          type="text"
          class="form-control"
          id="image"
          name="campgrounds[image]"
          value="<%= campground.image %>"
          required
        />
        <div class="valid-feedback">Right format</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            id="price"
            type="text"
            class="form-control"
            placeholder="0"
            value="<%= campground.price %>"
            aria-label="price"
            aria-describedby="price-label"
            name="campgrounds[price]"
            required
          />
          <div class="valid-feedback">Right format</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          class="form-control"
          id="description"
          name="campgrounds[description]"
          required
        >
<%= campground.description %></textarea
        >
        <div class="valid-feedback">Right format</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Edit Campground</button>
      </div>
    </form>
    <hr />
    <div class="mb-5">
      <a href="/campgrounds/<%= campground._id %>">Return to the campground</a>
    </div>
  </div>
</div>
