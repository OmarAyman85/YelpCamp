<% layout('layouts/boilerplate') %>
<h1>All campgrounds</h1>
<hr />
<a href="/campgrounds/new">Add new Campgorund</a>
<hr />

<% for (let campground of campgrounds) {%>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <img src="<%= campground.image %>" class="img-fluid" alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title"><%= campground.title %></h3>
        <h5 class="card-location">
          <p class="text-muted"><%= campground.location %></p>
        </h5>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-price">Price: $<%= campground.price %> / night</p>
        <a class="btn btn-info" href="campgrounds/<%= campground._id %>"
          >View <%= campground.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
